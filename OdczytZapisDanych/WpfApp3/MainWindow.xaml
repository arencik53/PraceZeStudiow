<Window x:Class="WpfLogApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="200" Width="400">
    <Grid Margin="10">
        <TextBox x:Name="txtImie" Margin="0,10,0,0" FontSize="16" VerticalAlignment="Top" TextChanged="txtImie_TextChanged" TextAlignment="Center" Height="90"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Zapisz" Width="80" Margin="5" Click="BtnZapisz_Click"/>
            <Button Content="Odczytaj" Width="80" Margin="5" Click="BtnOdczytaj_Click"/>
        </StackPanel>
    </Grid>
</Window>
